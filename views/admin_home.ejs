<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ConnectedIn Social Network</title>
    <!-- Cant include bootstrap locally ??? -->
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  </head>
  <body style="background-color:#417d9a">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
    </button>
      <a class="navbar-brand" href="/home/<%= user._id%>">
        <img src="/logo.png" width="30" height="30" class="d-inline-block align-top" alt=""><span style="margin:0;padding:0">onnectedIn</span>
      </a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
           <a class="nav-link" href="/admin%>">Home</a>
         </li>
        </ul>
      </div>
      <p style="margin:5px">Admin: <%= user.firstname%> <%=  user.lastname%></p>
      <a href="/logout">
        <button class="btn btn-default btn-outline-primary"type="button" name="logout">Logout</button>
      </a>
    </nav>

<div class="" style="margin-top: 30px;margin-left:auto;margin-right:auto;width:60%;background-color:#f7f7f7;box-shadow: 1px 1px 1px black;border: 1px solid">
  <div class="container">
    <h4>User List</h4>
    <form class="" action="/admin/export" method="get">
      <button class="btn btn-default btn-outline-success"type="submit" name="button">Export XML File</button>
    </form>
    <div class="list-group">
      <% networkUsers.forEach(function(nuser){ %>
      <a href="/profile/<%= nuser._id %>" class="list-group-item list-group-item-action">
        <span class="pull-left ">
             <img src="/default_profile.jpg" width="48" height="48" class=" img-rounded" />
        </span>
         <%= nuser.firstname %> <%= nuser.lastname %> <%= nuser.email %>
       </a>
       <% }); %>
    </div>
  </div>
</div>


