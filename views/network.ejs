      <div class="" style="margin-top: 30px;margin-left:auto;margin-right:auto;width:60%;background-color:#f3f3f3;box-shadow: 1px 1px 1px black;border: 1px solid">
        <div class="container">
          <div class="" style="text-align:center">
              <h4>Recommended Users</h4><br>
              <form class="" action="#" method="get">
                <input type="text" name="" value="" placeholder="Search by name, company, education etc.">
                <button class="btn btn-default btn-outline-primary"type="submit" name="button">Search</button>
              </form>
          </div>


          <div class="row" style="margin:15px">
            <% networkUsers.forEach(function(nuser){ %>
              <div class="col-sm-4">

                <a href="/profile/<%= nuser._id %>" style="text-align:center">
                  <img src="/default_profile.jpg" alt="" style="margin:0 auto;display:block">
                  <p><%=nuser.firstname %> <%=nuser.lastname %></p>
                </a>
                <div class="" style="display:block;text-align:center">
                    <p><%=nuser.email %></p>
                    <p>Education</p>
                    <p>Work Experience</p>
                    <form action="/network/<%=user._id%>/new/<%=nuser._id%>" method="post">
                      <button id="Add" class="btn btn-default btn-outline-primary" type="submit" name="button">Add to Network</button>
                    </form>

                </div>

              </div>
            <% }); %>
          </div>
          </div>

        </div>

