          <label for="fnameLabel">First Name</label>
          <input class="form-control" id="fnameLabel" type="text" name="firstname" value="" required> <br>
          <label for="lnameLabel">Last Name</label>
          <input class="form-control" id="lnameLabel" type="text" name="lastname" value="" required> <br>
          <label for="picLabel">Profile Picture</label>
          <input id="picLabel" type="file" name="pic" accept="image/*"> <br>
          <input type="submit" value="Sign Up!">
        </form>
    </div>


