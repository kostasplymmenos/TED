<% include partials/header.ejs %>

<div class="" style="margin-top: 30px;margin-left:auto;margin-right:auto;width:60%;background-color:#f7f7f7;box-shadow: 2px 1px 1px 1px #505050;border-radius: 6px;border: 1px solid #808080">
  <div class="list-group-item" style="text-align:center">
    <h4>Your Settings</h4>
  </div>

  <div class="list-group-item" style="text-align:center;margin:20px">
      <p>Email: <%= user.email %></p>
      <form action="#" method="post">
        New Email:
        <input class="form-control" type="email" name="username" value="" required>
        <button class="btn btn-default btn-outline-primary"type="submit" name="button">Change Email</button>
      </form>
  </div>

  <div class="list-group-item" style="text-align:center;margin:20px">
      <p>Telephone: <%= user.telephone %></p>
      <form action="#" method="post">
        <input class="form-control" type="string" name="username" value="" required>
      <button class="btn btn-default btn-outline-primary"type="submit" name="button">Change Telephone Number</button>
  </div>

  <div class="list-group-item" style="text-align:center;margin:20px">
      <button class="btn btn-default btn-outline-primary"type="submit" name="button">Change Password</button>
  </div>

</div>

<% include partials/footer.ejs %>
